<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://outgoingDocumentEdit.caption"
        focusComponent="form"
        messagesPack="ru.estartsev.edms.web.screens.outgoingdocument">
    <data>
        <instance id="outgoingDocumentDc"
                  class="ru.estartsev.edms.entity.OutgoingDocument"
                  view="outgoingDocument-editView">
            <loader/>
            <collection id="fileDc" property="file"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="outgoingDocumentDc">
                <column width="350px">
                    <pickerField id="documentTypeField" property="documentType">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <textField id="regNumberField" property="regNumber"/>
                    <dateField id="registrationDateField" property="registrationDate" editable="false"/>
                    <pickerField id="destinationField" property="destination">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <textField id="recipientField" property="recipient"/>
                    <textField id="themeField" property="theme"/>
                    <textField id="executorField" property="executor" editable="false"/>
                    <pickerField id="signerField" property="signer">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <textField id="footnoteField" property="footnote"/>
                    <textField id="titleField" property="title"/>
                    <dateField id="dateCreationField" property="dateCreation" editable="false"/>
                    <dateField id="dateChangeField" property="dateChange"/>
                    <lookupField id="statusField" property="status"/>
                    <pickerField id="logbookField" property="logbook">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <textField id="contentField" property="content"/>
                    <pickerField id="actField" property="act">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <dateField id="sentToActField" property="sentToAct"/>
                    <pickerField id="reconcilingField" property="reconciling">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <dateField id="reconcilationStartDateField" property="reconcilationStartDate"/>
                    <dateField id="reconcilationCompleteDateField" property="reconcilationCompleteDate"/>
                    <textField id="reconcilationResultField" property="reconcilationResult"/>
                    <textField id="commentField" property="comment"/>
                </column>
            </form>
            <groupBox id="fileBox" caption="msg://ru.estartsev.edms.entity/OutgoingDocument.file">
                <table id="fileTable" dataContainer="fileDc" width="100%" height="200px">
                    <actions>
                        <action id="add" type="add"/>
                        <action id="exclude" type="exclude"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="createDate"/>
                        <column id="extension"/>
                    </columns>
                    <buttonsPanel>
                        <button action="fileTable.add"/>
                        <button action="fileTable.exclude"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
